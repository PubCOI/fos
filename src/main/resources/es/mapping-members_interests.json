{
  "members_interests": {
    "mappings": {
      "properties": {
        "_class": {
          "type": "keyword"
        },
        "donation": {
          "type": "boolean"
        },
        "donorName": {
          "type": "text",
          "analyzer": "names_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "id": {
          "type": "keyword"
        },
        "pwInterestId": {
          "type": "keyword"
        },
        "mnisCategory": {
          "type": "long"
        },
        "mnisCategoryDescription": {
          "type": "keyword"
        },
        "mnisInterestId": {
          "type": "long"
        },
        "mnisPersonId": {
          "type": "long"
        },
        "personFullName": {
          "type": "text",
          "analyzer": "names_analyzer",
          "fields": {
            "keyword": {
              "type": "keyword"
            }
          }
        },
        "personNodeId": {
          "type": "keyword"
        },
        "pwCategory": {
          "type": "long"
        },
        "pwCategoryDescription": {
          "type": "keyword"
        },
        "pwPersonId": {
          "type": "keyword"
        },
        "registeredDate": {
          "type": "date",
          "format": "epoch_millis"
        },
        "source": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "text": {
          "type": "text",
          "analyzer": "interests_analyzer",
          "search_analyzer": "autocomplete_search"
        },
        "valueSum": {
          "type": "float"
        }
      }
    },
    "settings": {
      "index": {
        "number_of_shards": "1",
        "number_of_replicas": "1",
        "analysis": {
          "filter": {
            "general_stop_words": {
              "type": "stop",
              "stopwords": [
                "a",
                "an",
                "and",
                "as",
                "at",
                "be",
                "but",
                "by",
                "for",
                "had",
                "has",
                "have",
                "he",
                "her",
                "him",
                "his",
                "how",
                "i",
                "if",
                "in",
                "is",
                "it",
                "me",
                "my",
                "no",
                "of",
                "on",
                "or",
                "so",
                "some",
                "such",
                "than",
                "that",
                "the",
                "then",
                "these",
                "this",
                "those",
                "to",
                "we",
                "who",
                "''s"
              ]
            }
          },
          "analyzer": {
            "interests_analyzer": {
              "tokenizer": "autocomplete",
              "filter": [
                "asciifolding",
                "lowercase",
                "general_stop_words"
              ]
            },
            "autocomplete_search": {
              "tokenizer": "lowercase"
            },
            "names_analyzer": {
              "tokenizer": "autocomplete"
            }
          },
          "tokenizer": {
            "autocomplete": {
              "type": "edge_ngram",
              "min_gram": 2,
              "max_gram": 12,
              "token_chars": [
                "letter"
              ]
            }
          }
        }
      }
    }
  }
}